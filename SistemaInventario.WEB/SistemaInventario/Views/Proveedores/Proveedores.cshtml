        <div class="divnewprovedor">

            <div class="col-md-12">

                <div class="col-md-4">
                    <span><label><b>RFC:</b></label></span>
                    <input type="text" class="form-control" id="txtpruc" placeholder="Ingrese el RFC" required onkeypress="return solonumeros(event)" />
                    <span id="msjruc"></span>
                </div>

                <div class="col-md-8">
                    <span><label><b>Razón Social:</b></label></span>
                    <input type="text" class="form-control" id="txtprazonsocial" placeholder="Ingrese la razón social" required />
                    <span id="msjrazonsocial"></span>
                </div>

            </div>


            <div class="col-md-12">
                <br />
                <div class="col-md-4">
                    <span><label><b>Teléfono:</b></label></span>
                    <input type="text" class="form-control" id="txtptelefono" placeholder="Ingrese el telefono" required onkeypress="return solonumeros(event)" />
                    <span id="msjtelefono"></span>
                </div>

                <div class="col-md-6">
                    <span><label><b>Email:</b></label></span>
                    <input type="text" class="form-control" id="txtpemail" placeholder="Ingrese el email" required />
                    <span id="msjemail"></span>
                </div>

            </div>

            <div class="col-md-12">
                <br />
                <div class="col-md-8">
                    <span><label><b>Dirección:</b></label></span>
