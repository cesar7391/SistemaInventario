@model modelList
@using SistemaInventario.Models
@{
    ViewBag.Title = "Productos";
}

<br />
<br />
<br />

<div class="panel panel-warning">
    <div class="panel-heading"><b>Productos</b></div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <button class="btn btn-default"><img src="~/Content/img/imagenes/calendario.png" alt="Alternate Text" /> Catálogo</button>
            <button class="btn btn-default"><img src="~/Content/img/imagenes/departamento.png" alt="Alternate Text" /> Departamentos</button>
            <button class="btn btn-default"><img src="~/Content/img/imagenes/estrella.png" alt="Alternate Text" /> Promociones</button>
            <button class="btn btn-default"><img src="~/Content/img/imagenes/expediente.png" alt="Alternate Text" /> Importar</button>
            <button class="btn btn-default"><img src="~/Content/img/imagenes/xls.png" alt="Alternate Text" /> Exportar</button>
        </div>

        <div class="col-md-12">
            <center>
                <h3 style="color:darkorange" id="lblprin"></h3>
            </center>
        </div>

    </div>

    <br />

    <div class="panel-body">

        <div id="divcatalogo">

            <div class="col-md-12">
                <div class="col-md-4">
                    <input type="text" class="form-control" id="txtbuscador" placeholder="Buscar producto" />
                </div>

                <div class="col-md-4">
                    <select class="form-control" id="sldepartbuscar">
                        <option value="0"> -Todos los departamentos- </option>
                    </select>
                </div>

                <div class="col-md-4">
                    <button class="btn btn-default" id="btnnewp"><img src="~/Content/img/imagenes/new.png" alt="Alternate Text" /> Nuevo</button>
                    <button class="btn btn-default"><img src="~/Content/img/imagenes/lapiz.png" alt="Alternate Text" /> Modificar</button>
                    <button class="btn btn-default"><img src="~/Content/img/imagenes/eli.png" alt="Alternate Text" /> Eliminar</button>
                </div>

            </div>

            <div class="col-md-12">

                <br />
                <table class="table table-condensed table-bordered table-hover dt-reponsive tab">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Tipo</th>
                            <th>Codigo</th>
                            <th>Descrip.</th>
                            <th>T. prod</th>
                            <th>Depart</th>
                            <th>Costo</th>
                            <th>Venta</th>
                            <th>Mayoreo</th>
                            <th>stock</th>
                            <th>F. Venci</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>

            </div>

        </div>

        <div id="divnewproduct" style="display:none;">

            <div class="col-md-12">
                <div class="col-md-4">
                    <input type="radio" id="rdrbien"/> <b>Bien</b>
                    &nbsp;&nbsp;&nbsp;
                    <input type="radio" id="rdrservicio" /> <b>Servicio</b>
                </div>
            </div>

            <div class="col-md-12">
                <br />
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-addon">Código</span>
                        <input type="text" class="form-control" placeholder="Código de barras" id="txtcodbarra"/>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <br />
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon">Descripción</span>
                        <input type="text" class="form-control" placeholder="Descripción" id="txtdesc"/>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <br />
                <div class="col-md-2">
                    <span><b>Se vende por: </b></span>
                </div>

                <div class="col-md-4">
                    <input type="radio" id="rdrunca"/> <b>Unidad/Caja</b>
                    &nbsp;&nbsp;&nbsp;
                    <input type="radio" id="rdrkigra"/> <b>Kilos/Gramos</b>
                </div>
            </div>

            <div class="col-md-12">
                <br />
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-addon">Precio de adquisición: $</span>
                        <!--<span class="input-group-addon">$</span>-->
                        <input type="text" class="form-control" placeholder="0.00" id="txtpcosto" onkeypress="return Decimal(this, event)"/>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <br />
                <div class="col-md-3">
                    <div class="input-group">
                        <span class="input-group-addon">Ganancia</span>
                        <input type="number" class="form-control" id="txtganancia" placeholder="0" onkeypress="return Decimal(this, event)"/>
                        <span class="input-group-addon">%</span>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <br />
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-addon"><span id="lblpvenser"></span></span>
                        <span class="input-group-addon">$</span>
                        <input type="text" class="form-control" placeholder="0.00" disabled id="txtpvenser" onkeypress="return Decimal(this, event)"/>
                    </div>
                </div>

                @*<div class="col-md-3">
                    <input type="checkbox" id="chkimpuestos"/> Impuestos
                </div>*@

            </div>

            <div class="col-md-12">
                <br />
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-addon">Precio Mayoreo: $</span>
                        <!--<span class="input-group-addon">$</span>-->
                        <input type="text" class="form-control" placeholder="0.00" id="txtpmayoreo" onkeypress="return Decimal(this, event)" />
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="input-group">
                        <span class="input-group-addon">A partir de: </span>
                        <input type="text" class="form-control" placeholder="0.00" min="2" id="txtapartir" onkeypress="return solonumeros(event)" />
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <br />
                <div class="col-md-5">
                    <div class="input-group">
                        <span class="input-group-addon">Departamentos</span>
                        <select class="form-control" id="sldepart">
                            <option value="0"> - Seleccione un departamento -</option>
                            @foreach (var itm in Model.listaDepartamentos)
                            {
                                <option value="@itm.iddepart">@itm.depart</option>
                            }
                        </select>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <br />
                <div class="col-md-3">
                    <div class="input-group">
                        <span class="input-group-addon">Stock</span>
                        <input type="number" class="form-control" id="txtexist"/>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <br />
                <div class="col-md-3">
                    <div class="input-group">
                        <span class="input-group-addon">Stock mínimo</span>
                        <input type="number" class="form-control" id="txtstockmin"/>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <br />
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-addon">Fecha de vencimiento</span>
                        <input type="date" class="form-control" id="txtfvenci"/>
                    </div>
                </div>
                <div class="col-md-3">
                    <input type="checkbox" id="chknoaplica"/> No aplica
                </div>
            </div>

            <div class="col-md-12">
                <br/>
                <div class="col-md-4">
                    <button class="btn btn-default" id="btnvolver"><img src="~/Content/img/imagenes/deshacer.png" alt="Alternate Text" /> Volver</button>
                    <button class="btn btn-default" id="btnguardar"><img src="~/Content/img/imagenes/guardar.png" alt="Alternate Text" /> Guardar</button>
                </div>
            </div>

        </div>

    </div>

</div>

<script type="text/javascript" src="~/Scripts/app/productos.js"></script>
<script type="text/javascript" src="~/Scripts/js/validaciones.js"></script>
